VERSION=1
D=..
SRC_ML=\
  $D/Parse.ml \
  $D/Shellenv.ml $D/Shell.ml \
  $D/Percent.ml $D/Env.ml  $D/Eval.ml \
  $D/File.ml $D/Graph.ml \
