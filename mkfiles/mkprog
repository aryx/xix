# -*- sh -*-

# assumes the "includer" has defined:
#    TOP, SRC, INCLUDES, LIBS, and PROG
# and optionally also:
#    LINKFLAGS, EXTRALINKFLAGS, SYSLIBS, CCLIBS, CCLIBS_EXTRA

OBJS=${SRC:%.ml=%.cmo}

all:V: $PROG
opt:V: $PROG.opt

$PROG: $OBJS $LIBS
	$OCAMLC $LINKFLAGS $EXTRALINKFLAGS $INCLUDES $SYSLIBS $LIBS $prereq $CCLIBS $CCLIBS_EXTRA -o $target

SYSLIBSOPT=${SYSLIBS:%.cma=%.cmxa}
LIBSOPT=${LIBS:%.cma=%.cmxa}

$PROG.opt: ${OBJS:%.cmo=%.cmx}
	$OCAMLOPT $OPTLINKFLAGS $INCLUDES $SYSLIBSOPT $LIBSOPT $prereq -o $target

clean:V:
	rm -f *.cm[ioxa] *.cmxa  *.[oa]  *.annot *.cmt*
	rm -f *~ .*~ *.exe gmon.out *.output
	rm -f $PROG $PROG.opt 

nuke:V: clean
	rm -f $NUKEFILES

loc:V:
	mk nuke
	wc -l *.ml*


<$TOP/mkfiles/mkcommon
<.depend
